# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cjs,mjs,js,jsx,ts,tsx}]
indent_size = 2

[*.*sh]
end_of_line = lf

[*.{bat,cmd}]
end_of_line = crlf

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[.github/CODEOWNERS]
insert_final_newline = false
trim_trailing_newlines = true
